<Page
    x:Class="Crimson.Views.GameInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Crimson.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Crimson"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="50,40,50,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="20">
                <TextBlock Style="{StaticResource TitleLargeTextBlockStyle}" Text="{x:Bind ViewModel.Game.AppTitle, Mode=OneWay}" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon FontSize="15" Glyph="&#xE735;" />
                    <FontIcon FontSize="15" Glyph="&#xE735;" />
                    <FontIcon FontSize="15" Glyph="&#xE735;" />
                    <FontIcon FontSize="15" Glyph="&#xE735;" />
                    <FontIcon FontSize="15" Glyph="&#xE735;" />
                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}">4.8</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!--<Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    First Person
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    Shooter
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    Cloud Saves
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                Controller Support
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                Single Player
                        </TextBlock>
                    </Border>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Button
                        Padding="20,10,20,10"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Command="{x:Bind ViewModel.PrimaryActionCommand}"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        IsEnabled="{x:Bind ViewModel.IsPrimaryActionEnabled, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <ProgressRing
                                IsActive="True"
                                IsIndeterminate="{x:Bind ViewModel.IsProgressRingIndeterminate, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsProgressRingVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}" />
                            <FontIcon Glyph="{x:Bind ViewModel.PrimaryActionButtonGlyph, Mode=OneWay}" />
                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.PrimaryActionButtonText, Mode=OneWay}" />
                        </StackPanel>
                    </Button>

                    <DropDownButton IsEnabled="{x:Bind ViewModel.IsInstalled, Mode=OneWay}">
                        <DropDownButton.Content>
                            <StackPanel
                                Padding="10,5,10,5"
                                Orientation="Horizontal"
                                Spacing="10">
                                <FontIcon Glyph="&#xE713;" />
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                                    Manage
                                </TextBlock>
                            </StackPanel>
                        </DropDownButton.Content>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyout.MenuFlyoutPresenterStyle>
                                    <Style TargetType="MenuFlyoutPresenter">
                                        <Setter Property="MinWidth" Value="170" />
                                    </Style>
                                </MenuFlyout.MenuFlyoutPresenterStyle>
                                <MenuFlyout.Items>
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.UninstallCommand}" Text="Uninstall">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout.Items>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Column="1">
                <Border
                    Width="700"
                    Height="400"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Image Source="{x:Bind ViewModel.TitleImage, Mode=OneWay}" Stretch="UniformToFill" />
                </Border>
            </StackPanel>
        </Grid>

        <ContentDialog x:Name="ConfirmInstallDialog">
            <StackPanel HorizontalAlignment="Stretch" Spacing="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Image
                            Width="64"
                            Height="64"
                            Source="{x:Bind ViewModel.ConfirmInstallAppImage, Mode=OneWay}" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                MaxWidth="500"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.ConfirmInstallAppName, Mode=OneWay}" />
                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">Download Options</TextBlock>
                        </StackPanel>


                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        Width="48"
                        Height="34"
                        Margin="12,0,0,0"
                        VerticalAlignment="Top"
                        Command="{x:Bind ViewModel.CloseInstallDialogCommand}">
                        <FontIcon Glyph="&#xE711;" />
                    </Button>
                </Grid>

                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">Install Location</TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Glyph="&#xE8B7;" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.InstallLocation, Mode=OneWay}" />


                    <Button
                        Grid.Column="2"
                        Padding="10,5,10,5"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Command="{x:Bind ViewModel.ChangeInstallLocationCommand}"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                        <FontIcon Glyph="&#xE70F;" />
                    </Button>

                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xE896;" />
                            <TextBlock FontSize="18" Text="{x:Bind ViewModel.ConfirmInstallDownloadSizeText, Mode=OneWay}" />
                            <TextBlock
                                FontSize="18"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="download size" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xEDA2;" />
                            <TextBlock FontSize="18" Text="{x:Bind ViewModel.ConfirmInstallSizeText, Mode=OneWay}" />
                            <TextBlock
                                FontSize="18"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="install space required" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            Content="Import"
                            FontSize="20"
                            IsEnabled="False" />
                        <Button
                            Command="{x:Bind ViewModel.ConfirmInstallCommand}"
                            Content="Download"
                            FontSize="20"
                            Style="{ThemeResource AccentButtonStyle}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

        </ContentDialog>

    </Grid>
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
</Page>
