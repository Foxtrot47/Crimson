<Page
    x:Class="Crimson.Views.GameInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Crimson"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Margin="50,40,50,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="20">
                <TextBlock Text="{x:Bind ViewModel.Game.AppTitle, Mode=OneWay}" 
                         Style="{StaticResource TitleLargeTextBlockStyle}" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE735;" FontSize="15"/>
                    <FontIcon Glyph="&#xE735;" FontSize="15"/>
                    <FontIcon Glyph="&#xE735;" FontSize="15"/>
                    <FontIcon Glyph="&#xE735;" FontSize="15"/>
                    <FontIcon Glyph="&#xE735;" FontSize="15"/>
                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}">4.8</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!--<Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    First Person
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    Shooter
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                    Cloud Saves
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                Controller Support
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Padding="10,5,10,5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                        <TextBlock>
                                Single Player
                        </TextBlock>
                    </Border>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Button Command="{x:Bind ViewModel.PrimaryActionCommand}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Padding="20,10,20,10"
                            IsEnabled="{x:Bind ViewModel.IsPrimaryActionEnabled, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <ProgressRing 
                                IsActive="True"
                                Visibility="{x:Bind ViewModel.IsProgressRingVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                IsIndeterminate="{x:Bind ViewModel.IsProgressRingIndeterminate, Mode=OneWay}"
                                Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}"/>
                            <FontIcon
                                Glyph="{x:Bind ViewModel.PrimaryActionButtonGlyph, Mode=OneWay}" />
                            <TextBlock 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.PrimaryActionButtonText, Mode=OneWay}"/>
                        </StackPanel>
                    </Button>

                    <DropDownButton IsEnabled="{x:Bind ViewModel.IsInstalled, Mode=OneWay}">
                        <DropDownButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="10" Padding="10,5,10,5">
                                <FontIcon Glyph="&#xE713;" />
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                                    Manage
                                </TextBlock>
                            </StackPanel>
                        </DropDownButton.Content>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyout.MenuFlyoutPresenterStyle>
                                    <Style TargetType="MenuFlyoutPresenter">
                                        <Setter Property="MinWidth" Value="170" />
                                    </Style>
                                </MenuFlyout.MenuFlyoutPresenterStyle>
                                <MenuFlyout.Items>
                                    <MenuFlyoutItem Text="Uninstall" Command="{x:Bind ViewModel.UninstallCommand}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout.Items>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Column="1">
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Width="700" Height="400">
                    <Image Source="{x:Bind ViewModel.TitleImage, Mode=OneWay}" Stretch="UniformToFill" />
                </Border>
            </StackPanel>
        </Grid>

        <ContentDialog x:Name="ConfirmInstallDialog">
            <StackPanel Spacing="30" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="10"  Grid.Column="0">
                        <Image Source="{x:Bind ViewModel.ConfirmInstallAppImage, Mode=OneWay}" Width="64" Height="64" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock 
                                Text="{x:Bind ViewModel.ConfirmInstallAppName, Mode=OneWay}"
                                MaxWidth="500"
                                Style="{StaticResource TitleTextBlockStyle}" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">Download Options</TextBlock>
                        </StackPanel>


                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        Margin="12,0,0,0"
                        Width="48"
                        Height="34"
                        VerticalAlignment="Top"
                        Command="{x:Bind ViewModel.CloseInstallDialogCommand}">
                        <FontIcon Glyph="&#xE711;" />
                    </Button>
                </Grid>

                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">Install Location</TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="0" Glyph="&#xE8B7;" Margin="0,0,10,0" />
                    <TextBlock 
                        Grid.Column="1" 
                        Text="{x:Bind ViewModel.InstallLocation, Mode=OneWay}"
                        Style="{StaticResource SubtitleTextBlockStyle}" 
                        VerticalAlignment="Center"/>


                    <Button
                        Grid.Column="2"
                        Command="{x:Bind ViewModel.ChangeInstallLocationCommand}"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Padding="10,5,10,5">
                        <FontIcon Glyph="&#xE70F;" />
                    </Button>

                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xE896;"></FontIcon>
                            <TextBlock Text="{x:Bind ViewModel.ConfirmInstallDownloadSizeText, Mode=OneWay}" FontSize="18" />
                            <TextBlock FontSize="18" Text="download size" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xEDA2;"></FontIcon>
                            <TextBlock Text="{x:Bind ViewModel.ConfirmInstallSizeText, Mode=OneWay}" FontSize="18" />
                            <TextBlock FontSize="18" Text="install space required" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="1" HorizontalAlignment="Right" Margin="20,0,0,0">
                        <Button IsEnabled="False" Content="Import" FontSize="20" />
                        <Button 
                            Command="{x:Bind ViewModel.ConfirmInstallCommand}"
                            Style="{ThemeResource AccentButtonStyle}" 
                            FontSize="20" 
                            Content="Download" />
                    </StackPanel>
                </Grid>
            </StackPanel>

        </ContentDialog>

    </Grid>
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
</Page>
